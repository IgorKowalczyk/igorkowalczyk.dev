{
  "name": "igorkowalczyk-portfolio",
  "description": "My portfolio built on Next.js",
  "version": "6.1.0",
  "author": "Igor Kowalczyk",
  "homepage": "https://igorkowalczyk.dev",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "next start",
    "dev": "next dev",
    "build": "next build",
    "deploy": "pnpm run build && pnpm run start",
    "format": "prettier . --write --cache --ignore-unknown --plugin=prettier-plugin-tailwindcss",
    "format:check": "prettier . --check --cache --ignore-unknown",
    "analyze": "ANALYZE=true next build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "tsx lib/clean.ts",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@bprogress/next": "3.2.12",
    "@marsidev/react-turnstile": "1.3.1",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-navigation-menu": "1.2.14",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-switch": "1.2.6",
    "@shikijs/rehype": "3.13.0",
    "@tailwindcss/postcss": "4.1.15",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "geist": "1.5.1",
    "gray-matter": "4.0.3",
    "lucide-react": "0.546.0",
    "next": "16.0.0",
    "next-axiom": "1.9.3",
    "next-mdx-remote": "5.0.0",
    "next-themes": "0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "reading-time": "1.5.0",
    "server-only": "0.0.1",
    "sharp": "0.34.4",
    "shiki": "3.13.0",
    "tailwind-merge": "3.3.1",
    "tw-animate-css": "1.4.0",
    "vaul": "1.1.2",
    "zod": "4.1.12"
  },
  "devDependencies": {
    "@igorkowalczyk/eslint-config": "3.1.0",
    "@igorkowalczyk/prettier-config": "3.1.0",
    "@next/bundle-analyzer": "16.0.0",
    "@tailwindcss/typography": "0.5.19",
    "@types/mdx": "2.0.13",
    "@types/node": "24.9.0",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "autoprefixer": "10.4.21",
    "eslint": "9.39.1",
    "jiti": "2.6.1",
    "postcss": "8.5.6",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "tailwindcss": "4.1.15",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  },
  "browserslist": [
    ">0.3%",
    "not ie 11",
    "not dead",
    "not op_mini all"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/igorkowalczyk/igorkowalczyk.dev.git"
  },
  "bugs": {
    "url": "https://github.com/igorkowalczyk/igorkowalczyk.dev/issues"
  },
  "packageManager": "pnpm@10.18.3",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild",
      "protobufjs",
      "sharp"
    ],
    "ignoredBuiltDependencies": [
      "unrs-resolver"
    ],
    "overrides": {
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2"
    }
  }
